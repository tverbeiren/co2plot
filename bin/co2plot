  "input" = $( if [ ! -z ${VIASH_PAR_INPUT+x} ]; then echo -n "'"; echo -n "$VIASH_PAR_INPUT" | sed "s#['\\]#\\\\&#g"; echo "'"; else echo NULL; fi ),
  "add_temperature" = $( if [ ! -z ${VIASH_PAR_ADD_TEMPERATURE+x} ]; then echo -n "as.logical(toupper('"; echo -n "$VIASH_PAR_ADD_TEMPERATURE" | sed "s#['\\]#\\\\&#g"; echo "'))"; else echo NULL; fi ),
