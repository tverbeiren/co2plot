  "format" = $( if [ ! -z ${VIASH_PAR_FORMAT+x} ]; then echo -n "'"; echo -n "$VIASH_PAR_FORMAT" | sed "s#['\\]#\\\\&#g"; echo "'"; else echo NULL; fi ),
